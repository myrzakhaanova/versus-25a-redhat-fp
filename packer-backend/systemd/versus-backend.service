[Unit]
Description=Versus Backend Django App (Gunicorn)
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/opt/versus/backend
Environment="PATH=/opt/versus/backend/venv/bin"
ExecStartPre=/opt/versus/backend/venv/bin/python manage.py migrate --noinput
ExecStart=/opt/versus/backend/venv/bin/gunicorn --workers 3 --bind unix:/opt/versus/backend/gunicorn.sock main.wsgi:application
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target